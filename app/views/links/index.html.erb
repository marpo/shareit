<h1>Links</h1>

<table>
  <tr>
    <th>Url</th>
    <th>Titel</th>
    <th>Beschreibung</th>
    <th>Autor</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @links.each do |link| %>
  <tr>
    <td><%= link.url %></td>
    <td><%= link.titel %></td>
    <td><%= link.beschreibung %></td>
    <td><%= link.autor %></td>
    <td><%= link_to 'Show', link %></td>
    <td><%= link_to 'Edit', edit_link_path(link) %></td>
    <td><%= link_to 'Destroy', link, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

